# ========================================
# BACKEND ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to GitHub!

# ========================================
# MongoDB Atlas Configuration
# ========================================
# Get this from MongoDB Atlas:
# 1. Go to atlas.mongodb.com
# 2. Click "Connect" on your cluster
# 3. Choose "Connect your application"
# 4. Copy the connection string
# 5. Replace <password> with your database password
MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=cemention

# ========================================
# JWT Security Configuration
# ========================================
# Generate a secure random string (minimum 32 characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-to-random-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=720

# ========================================
# Twilio SMS Configuration (Optional)
# ========================================
# Leave empty for demo mode (OTP shown in response)
# For production SMS, get from twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ========================================
# OTP Mode Configuration
# ========================================
# true = Demo mode (OTP shown in API response for testing)
# false = Production mode (OTP sent via Twilio SMS)
OTP_DEMO_MODE=true

# ========================================
# CORS Configuration
# ========================================
# Add your frontend URLs (comma-separated)
# Example: https://your-frontend.onrender.com,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# ========================================
# Server Configuration
# ========================================
# Render will assign a PORT automatically - don't change this
PORT=8000